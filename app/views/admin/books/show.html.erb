<div class="col-md-4">
  <div class="thumbnail book-card">
    <%= book_image_select(@book) %>
    <div class="caption">
      <h3><%= @book.title %></h3>
      <h4><b><%= "Address: " %></b></h4> <%= @book.author %>
      <h4>
        <b><%= "Rate Place" %></b>
        <span class="average-review-rating" data-score="<%= @book.rate_place %>"></span>
      </h4>
      <h4>
        <b><%= "Rate Service" %></b>
        <span class="average-review-rating" data-score="<%= @book.rate_service %>"></span>
      </h4>
      <h4>
        <b><%= "Rate Food" %></b>
        <span class="average-review-rating" data-score="<%= @book.rate_food %>"></span>
      </h4>
      <h4>
        <b><%= "Rate Price" %></b>
        <span class="average-review-rating" data-score="<%= @book.rate_price %>"></span>
      </h4>
      <h4>
        <b><%= t "views.book.show.ratescore" %></b>
        <span class="average-review-rating" data-score="<%= @book.rate_score %>"></span>
      </h4>

      <h4><b><%= "Description: "%></b></h4><%= @book.description %>
    </div>
  </div>
  <%= link_to t("views.admin.book.index.editbutton"), edit_admin_restaurant_url(@book),
    class:"btn btn-info" %>
  <%= link_to t("views.admin.book.index.deletebutton"), admin_restaurant_url(@book),
    method: :delete, data: {confirm: t("views.admin.book.index.deleteconfirm")},
    class:"btn btn-danger" %>
</div>
<div class="col-md-8">
  <h2><%= t "views.book.show.reviews" %></h2>
  <%= render @book.reviews.order_by_time %>
</div>
