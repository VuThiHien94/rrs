<h1><%= t "views.admin.book.index.dashboard" %></h1>
<%= render "admin/books/search_form" %>
<%= link_to "New Restaurant", new_admin_restaurant_path, class: "btn btn-info" %>
<div class="clearfix"></div>
<table class="table table-hover">
  <tr>
    <th><%= t "views.admin.book.index.category" %></th>
    <th><%= "Name" %></th>
    <th><%= "Address" %></th>
    <th><%= t "views.admin.book.index.rate_score" %> </th>
    <th><%= t "views.admin.book.index.reviews" %></th>
    <th><%= t "views.admin.book.index.adminfunction" %></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td> <%= book.category.title %> </td>
      <td> <%= link_to book.title, admin_restaurant_path(book) %> </td>
      <td> <%= book.author %> </td>
      <td> <%= book.rate_score %></td>
      <td> <%= book.reviews.count %> </td>
      <td>
        <span>
          <%= link_to t("views.admin.book.index.editbutton"), edit_admin_restaurant_url(book),
            class:"btn btn-info" %>
          <%= link_to t("views.admin.book.index.deletebutton"), admin_restaurant_url(book),
            method: :delete, data: {confirm: t("views.admin.book.index.deleteconfirm")},
              class:"btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @books %>

