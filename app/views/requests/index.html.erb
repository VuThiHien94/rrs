<h1><%= t "views.requests.index.dashboard" %></h1>
<p>Please send suggestions for restaurants you would like to</p>
<table class="table table-hover">
  <tr>
    <th><%= t "views.requests.index.id" %></th>
    <th><%= "Name" %></th>
    <th><%= "Address" %></th>
    <th><%= "Status" %></th>
    <th><%= t "views.requests.index.functions" %></th>
  </tr>
  <% @requests.each do |request| %>
    <tr>
      <td> <%= request.id %> </td>
      <td> <%= request.book_title %> </td>
      <td> <%= request.book_author %> </td>
      <td><%= request.accept %></td>
      <td>
        <% if request.waiting? %>
          <span>
            <%= link_to t("views.requests.index.cancelbutton"), request_path(request),
              method: :delete, data: {confirm: t("views.requests.index.delete_confirm")},
              class:"btn btn-info" %>
          </span>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
<div>
<%= link_to t("views.requests.index.newrequestbutton"), new_request_path,
  class: "btn btn-info" %>
</div>
<%= will_paginate @requests %>
