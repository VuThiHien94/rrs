<div class="col-md-4">
  <div class="thumbnail book-card">
    <%= link_to book_image_select(@book), current_user.is_admin? ? admin_restaurant_path(@book) : restaurants_path(@book) %>
    <div class="caption">
      <h3><%= link_to @book.title, restaurants_path(@book) %></h3>
      <h4><%= "Address:" %> <%= @book.author %></h4>
      <div>
        <h4>
          <%= t "views.book.show.ratescore" %>
          <span class="average-review-rating" data-score="<%= @book.rate_score %>"></span>
        </h4>
      </div>
      <div class="like-area">
        <%= render partial: "like_books/like_form",
          locals: {book: @book} %>
      </div>
      <%= render "marks/mark_book" %>
    </div>
  </div>
  <div>
    <%= link_to t("views.book.show.addreview"), new_restaurant_review_path(@book),
      class: "btn btn-info" %>
  </div>
  <div style="margin: 20px">
    <%= social_share_button_tag(@book.title) %>
  </div>
</div>
<div class="col-md-8">
  <h2>  <%= t "views.book.show.reviews" %> </h2>
  <%= render @book.reviews.order_by_time %>
</div>
