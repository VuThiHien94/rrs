<div class="row">
  <div class="col-md-8">
    <h1><%= "List Restaurant" %></h1>
  </div>
  <%= render "search_form" %>
</div><div class="row">
  <div class="container">
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-sm-4">
          <div class="thumbnail book-card">
            <%= link_to book_image_select(book), current_user.is_admin? ? admin_restaurant_path(book) : restaurant_path(book) , class: "img-responsive home-image" %>
            <div class="caption">
              <h3><%= link_to book.title, restaurant_path(book) %></h3>
              <h4><%= "" %> <%= book.author %></h4>
              <h4>
                <%= t "views.book.show.ratescore" %>
                <span class="average-review-rating" data-score="<%= book.rate_score %>"></span>
              </h4>

            </div>
          </div>
        </div>
      <% end %>
      <%= will_paginate @books %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
