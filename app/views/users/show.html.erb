<div class="row">
  <div class="col-md-4">
      <div class="col-md-6">
        <h1>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar.url(:thumb) %>
        <% else %>
          <%= image_tag("avatar.png", size: "150x150") %>
        <% end %>
        </h1>
      </div>
      <div class="col-md-6 avatar">
        <h2><%= @user.name %></h2>
        <%= @user.email %>
      </div>
  </div>
</div>
