<div class="row">
  <div class="col-md-4">
    <div class="col-md-6">
      <h1><%= image_tag @user.avatar.url, size: "150x150" %></h1>
      <%= render "shared/stats" %>
    </div>
    <div class="col-md-6 avatar">
      <h2><%= @user.name %></h2>
      <%= @user.email %>
    </div>
    <div class="col-md-8">
      <%= render "follow_form" if logged_in? %>
    </div>
  </div>
  <div class="col-md-3">
    <%= render "list_favorite_history" %>
  </div>
  <div class="col-md-5 show-activity">
    <center> <%= t "views.activities.recent_action" %> </center>
    <%= render partial: "activities/activities",
      locals: {activities: @activities} %>
    <%= will_paginate @activities %>
  </div>
</div>
