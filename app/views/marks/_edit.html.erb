<%= form_for [@book, @user_book], url: restaurant_mark_url(@book, @user_book), method: :put do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :book_id, value: @book.id %>

  <span>
    <%= f.select :mark_type, Mark.mark_types.keys %>
  </span>
  <%= f.submit t("views.book.show.markas"), class: "btn btn-primary" %>
<% end %>
