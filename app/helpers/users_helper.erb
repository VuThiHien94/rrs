module UsersHelper
  def user_avatar_select user
    if user.avatar.exists?
      image_tag user.avatar.url(:medium),
        id: "image-preview",
        class: "img-responsive img-rounded"
    else
      image_tag "avatar.jpg",
        id: "image-preview",
        class: "img-responsive img-rounded"
    end
  end
end
